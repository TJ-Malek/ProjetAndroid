<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listeVol">

    <TextView
        android:id="@+id/NumVolTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="NumVol"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/AeroportDeptTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:text="AeroDept"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/NumVolTitle"/>
    <TextView
        android:id="@+id/HDepartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="HDepart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/AeroportDeptTitle"/>
    <TextView
        android:id="@+id/AeroportArrTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="AeroArr"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/HDepartTitle"/>
    <TextView
        android:id="@+id/HArriveeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:text="HArrivee"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/AeroportArrTitle"
        />
    <ListView
        android:id="@+id/listView"
        android:background="#FAFAFA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/HArriveeTitle"/>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:theme="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</RelativeLayout>