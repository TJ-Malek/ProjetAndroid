<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ListActivateUser"
    android:id="@+id/UserLayout">
    <Button
        android:id="@+id/Menu"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:lines="2"
        android:text="Menu principal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@color/purple_500"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:lines="2"
        android:text="Utilisateurs Ã  activer"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@color/purple_500"
        android:textColor="@color/white"
        android:layout_below="@+id/Menu"/>
    <TextView
        android:id="@+id/IdUtilisateurTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="Id"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@+id/Title"
        android:textColor="@color/purple_500"/>
    <TextView
        android:id="@+id/FullNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:text="Nom complet"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/IdUtilisateurTitle"
        android:layout_below="@+id/Title"
        android:textColor="@color/purple_500"/>
    <TextView
        android:id="@+id/MailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Mail"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/FullNameTitle"
        android:layout_below="@+id/Title"
        android:textColor="@color/purple_500"
        />
    <TextView
        android:id="@+id/StatutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Statut"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/MailTitle"
        android:layout_below="@+id/Title"
        android:textColor="@color/purple_500"
        />

    <ScrollView
        android:id="@+id/layout"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/StatutTitle"
        >
        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            >
            <ListView
                android:id="@+id/listView"
                android:background="#FAFAFA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/MatriculeTitle"/>


        </HorizontalScrollView>

    </ScrollView>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emptyElement"
        android:text="@string/vide"
        android:textStyle="bold"
        android:textSize="30sp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"/>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:theme="@color/colorPrimary"
        />
</RelativeLayout>

