<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

        <TableRow  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            >


            <TextView
                android:id="@+id/IdAffectationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="IdAffect"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/NumVolTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:text="NumVol"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/DateVolTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="DateVol"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/NumAvionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="NumAvion"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/IdPiloteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="IdPilote"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible" />


        </TableRow>
        <TableRow android:focusable="false"
            android:focusableInTouchMode="false"
            >

            <TextView
                android:id="@+id/IdAffectation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"

                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/NumVol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"

                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/DateVol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"

                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/NumAvion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"

                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/IdPilote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"

                android:textSize="18sp"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>
