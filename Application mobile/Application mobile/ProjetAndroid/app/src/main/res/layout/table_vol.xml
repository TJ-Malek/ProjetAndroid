<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                >

                <TableRow  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    >


                    <!--app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/coverImage"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            android:layout_marginLeft="16dp" -->

                    <TextView
                        android:id="@+id/NumVolTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="NumVol"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/AeroportDeptTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="8dp"
                        android:text="AeroDept"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        />
                    <TextView
                        android:id="@+id/HDepartTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:text="HDepart"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/AeroportArrTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:text="AeroArr"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/HArriveeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:text="HArrivee"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                    <!--app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/coverImage"
                    app:layout_constraintTop_toBottomOf="@+id/circleTitle" -->

                </TableRow>
                <TableRow android:focusable="false"
                    android:focusableInTouchMode="false"
                    >

                    <TextView
                        android:id="@+id/NumVol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"

                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/AeroportDept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"

                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/HDepart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"

                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/AeroportArr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"

                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/HArrivee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"

                        android:textSize="18sp"
                        />
                </TableRow>
            </TableLayout>

</LinearLayout>
